<% @posts.each do |post| %>
	<div>
		<h1><%= link_to post.title, post %></h1>
		<p><%= "Publicado por #{post.user.email} #{time_ago_in_words(post.created_at)}" %></p>
		<p><%= "#{post.body[0...100]}..." %></p>
		<% if !current_user.nil? %>
			<% if current_user[:id] == post.user_id %>
				<%= link_to "Editar", edit_post_path(post) %> 
				<%= link_to "Eliminar", post, method: :delete, data:{confirm: "¿Está seguro que desea eliminar este post"} %>	
			<% end %>
		<% end %>
	</div>
<% end %>